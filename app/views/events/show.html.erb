<script type="text/javascript" src="https://apis.google.com/js/plusone.js"></script>

<div class = "content-body">
  <div class ="show-event">
    <ul class="breadcrumbs">
      <li><a href="#"> <%= render_breadcrumbs :separator => ' / ' %></a></li>
    </ul>
    <div class ="row">
      <div class ="large-4 columns">
        <div id= "calendars">
        </div>
      </div>
      <div class= "large-8 columns"> 
        <!--  <p id="notice"><%= notice %></p> -->
        <h3><%= @event.name %></h3>
        <div class = "row">
          <div class = "large-9 columns">
            <ul class="social-share-list list-inline">
              <li class="twt">
                <%= tweet_button %>
              </li>
              <li class="fb">
                <%= like_button(690575874330211) %>
              </li>
              <li class="pi">
                <%= pinit_button(url: request.url, media: @event.image_url, description: "Amazing Picture") %>
              </li>
              <li class = "gp">
                <%= google_plus_button %>
              </li>
            </ul>
          </div>
          <div class = "large-3 columns">
            <h5>Share:</h5><%= social_share_button_tag(@event.image_url) %>         
         </div>
        </div>
        <div class = "row">
          <div class="div-orbit">
            <ul class="example-orbit-content" data-orbit>
             <li data-orbit-slide="headline-1">
               <div>
                 <%= image_tag(@event.image_url) %>
               </div>
             </li>
             <li data-orbit-slide="headline-2">
               <div>
                 <%= image_tag(@event.image_url_two) %>
               </div>
             </li>
             <li data-orbit-slide="headline-3">
               <div>
                 <%= image_tag(@event.image_url_three) %>
               </div>
             </li>
           </ul>
          </div>
        </div>
        <div class = "row">
          <div class = "large-12 columns">
            <div class ="description-event">
              <p>
                <strong>Description:</strong>
                <%= @event.description %>
              </p>
               <p>
                <strong>Date:</strong>
                <%= @event.date %>
              </p>

              <p>
                <strong>Place:</strong>
                <%= @event.address %>
              </p>
            </div>
          </div>
        </div>
        <div class = "row">
           <div class = "large-12 columns">
             <div class ="video">
               <div class="flex-video">
                  <iframe width="354" height="210" src="//<%= @event.video_url %>" frameborder="0" ></iframe>
                </div>
             </div>
           </div>
         </div>
      </div>
    </div>
  </div>
</div>

