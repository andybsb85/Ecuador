<% content_for :title,  t('.trip')%>

<div class="content-body">
  <% if notice %>
  <p id="notice"><%= notice %></p>
  <% end %>
   <ul class="breadcrumbs">
      <li><%=link_to t('.ecuadorTourism'),  index_path%></li>
     <li><%=link_to t('.destinations'),  destination_list_index_path %></li>
      <li><%=link_to t('.trip'), :class => 'unavailable' %></li>
    </ul>
  <h4> <%= t('.trip') %></h4>
  <div class= "row">
    <div class  = "large-7 columns">
      <div class = "plan-show-content">
        <table>
          <%= render (@plan.line_destinations) %>

        </table>
      </div>
    </div>
    <div class="large-5 columns">
      <div class = "map-destination">
          <div style='width: 100%;'>
            <div id="map" style='width: 100%; height: 290px;'></div>
           
          </div>
        </div>
    </div>
  </div>
  <div class= "row">
    <div class="large-2 columns">
      <%= button_to 'Empty Plan', @plan, method: :delete,
      data: {confirm: 'Are you sure?'}, class: 'button tiny radius'%>
    </div>
    <div class="large-10 columns">
      <%= link_to t('.print'), '#', onclick: "printpage()", class: 'button tiny radius'%>
    </div>
  </div>
</div>
