<div class="content">
  <div class ="country-content">
    <h1>Listing regions</h1>

    <table>
      <thead>
        <tr>
          <th> name</th>
           <th> Country id</th>
          <th>Image url</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @regions.each do |region| %>
          <tr>
            <td><%= region.name %></td>
            <td><%= region.country_id %></td>
            <td><%= region.image_url %></td>
            <td><%= region.description %></td>
            <td><%= link_to 'Show', region %></td>
            <td><%= link_to 'Edit', edit_region_path(region) %></td>
            <td><%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Region', new_region_path %>
  </div>
</div>