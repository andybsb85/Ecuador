<div class="content">
  <div class ="country-content">
     <ul class="breadcrumbs">
       <li><%= link_to  t('.ecuadorTurism'), index_path %></li>
       <li class="current"><%= link_to  t('.destination'), destination_list_index_path %></li>
       <li class="current"><%= link_to  t('.destination_show') %></li>
     </ul>
    <p id="notice"><%= notice %></p>
 <div class ="row">
    <div class= "large-6 columns">
      <div class="div-orbit">
        <ul class="example-orbit-content" data-orbit   data-options="animation:slide;
                          pause_on_hover:true;
                          animation_speed: 600;
                          timer_speed: 5000;
                          navigation_arrows:false;
                          bullets:false;
                          next_on_click: false;
                          timer: true;
                          circular: true,
                          slide_number: false,">
          <li data-orbit-slide="headline-1">
            <div>
              <%= image_tag "frog.jpg" %>
            </div>
          </li>
          <li data-orbit-slide="headline-2">
            <div>
              <%= image_tag "cuenca-175943_1280.jpg" %>
            </div>
          </li>
          <li data-orbit-slide="headline-3">
            <div>
               <%= image_tag "flame-240490_1280.jpg" %>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
    <h2> <%= @destination.name %></h2>
     <p>
      <strong>City:</strong>
      <%= @destination.city_id %>
    </p>

    <p>
      <strong>Type destination:</strong>
      <%= @destination.type_destination_id %>
    </p>

    <p>
      <%= image_tag(@destination.image_url) %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @destination.description %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @destination.address %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @destination.phone %>
    </p>

    <p>
      <strong>Website:</strong>
      <%= @destination.website %>
    </p>

    <%= link_to 'Edit', edit_destination_path(@destination) %> |
    <%= link_to 'Back', destinations_path %>
  </div>
</div>