<div class="content-body">
  <div class ="country-content">
    <h1>Listing cities</h1>

    <table>
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Region</th>
          <th>Image url</th>
          <th>Description</th>
          <th>Address</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @cities.each do |city| %>
          <tr>
            <td><%= city.id %></td>
            <td><%= city.name %></td>
            <td><%= city.region_id %></td>
            <td><%= city.image_url %></td>
            <td><%= city.description %></td>
            <td><%= city.address %></td>
            <td><%= city.latitude %></td>
            <td><%= city.longitude %></td>
            <td><%= link_to 'Show', city %></td>
            <td><%= link_to 'Edit', edit_city_path(city) %></td>
            <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New City', new_city_path %>
  </div>
</div>