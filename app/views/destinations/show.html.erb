<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<div class="content-body">
  <div class ="country-content">
      <ul class="breadcrumbs">
      <li><a href="#"> <%= render_breadcrumbs :separator => ' / ' %></a></li>
    </ul>
    <div class ="row">
    <div class= "large-3 columns">
     
    </div>
    <div class= "large-9 columns">
      <h3> <%= @destination.name %></h3>
     
      <div class="div-orbit">
        <ul class="example-orbit-content" data-orbit   data-options="animation:slide;
                          pause_on_hover:true;
                          animation_speed: 600;
                          timer_speed: 5000;
                          navigation_arrows:true;
                          bullets:false;
                          next_on_click: false;
                          timer: true;
                          circular: true;
                          slide_number: false;">
          <li data-orbit-slide="headline-1">
            <div>
             <%= image_tag(@destination.image_url) %>
            </div>
          </li>
          <li data-orbit-slide="headline-2">
            <div>
             <%= image_tag(@destination.image_url_two) %>
            </div>
          </li>
          <li data-orbit-slide="headline-3">
            <div>
              <%= image_tag(@destination.image_url_three) %>
            </div>
          </li>
        </ul>
      </div>
      <div class = "options">
      <%= link_to (image_tag "share-facebook.png"), "https://www.facebook.com/sharer/sharer.php?u=http://zippy-dragonstone-46-129231.euw1.nitrousbox.com/destinations/3?locale=en"%>
       <%= link_to 'Print' %>
      </div>
      <div class="content-destination">
        <p>
          <strong>Description:</strong>
          <%= @destination.description %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @destination.address %>
        </p>

        <p>
          <strong>Phone:</strong>
          <%= @destination.phone %>
        </p>

        <p>
          <strong>Website:</strong>
          <%= @destination.website %>
        </p>
      </div>
      <div class = "map-destination">
      <div style='width: 100%;'>
        <div id="map" style='width: 100%; height: 290px;'></div>
      </div>
         
      </div>
    </div>
  </div>
</div>

<%= content_for :scripts do %>
  <script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });
  </script>
<% end %>