<div class="content-body">
  <div class ="country-content">
   
    <h1>Listing destinations</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>City</th>
          <th>Type destination</th>
          <th>Image url one</th>
          <th>Image url two</th>
          <th>Image url three</th>
          <th>Summary</th>
          <th>Description</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Website</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @destinations.each do |destination| %>
          <tr>
            <td><%= destination.name %></td>
            <td><%= destination.city_id %></td>
            <td><%= destination.type_destination_id %></td>
            <td><%= destination.image_url %></td>
            <td><%= destination.image_url_two %></td>
            <td><%= destination.image_url_three %></td>
            <td><%= destination.summary %></td>
            <td><%= destination.description %></td>
            <td><%= destination.address %></td>
            <td><%= destination.latitude %></td>
            <td><%= destination.longitude %></td>
            <td><%= destination.phone %></td>
            <td><%= destination.website %></td>
            <td><%= link_to 'Show', destination %></td>
            <td><%= link_to 'Edit', edit_destination_path(destination) %></td>
            <td><%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Destination', new_destination_path %>
   </div>
</div>